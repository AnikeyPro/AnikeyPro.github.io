<%- include('header'); -%>

<body>
  <div class="wrapper">
    <span id="registered" class="registered" hidden></span>
    <h1>Register</h1>
    <form action="/register" method="POST" class='formDef'>
      <div>
        <label for="username">Username</label>
        <input type="text" id="username" name="username"  required >
      </div>
      <!-- <div>
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required>
  </div> -->
      <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit">Register</button>
    </form>
    <a href="/login">Login</a>
  </div>

</body>
<script>
  var tmp = [];
  var span = document.getElementById('registered');
  window.location.search.substr(1).split("&")
    .forEach(function (item) {
      tmp = item.split("=");
      switch (tmp[0]) {
        case 'exist':
          span.removeAttribute("hidden");
          span.innerHTML = 'Username already exist!';
          break;
        case 'err':
          span.removeAttribute("hidden");
          span.innerHTML = 'Some tech error, try later!';
          break;
        default:
          break;
      }
    });
</script>