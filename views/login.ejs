<%- include('header'); -%>

<body>
  <div class="wrapper">
    <span id="registered"  class="registered" hidden></span>
    <h1>Login</h1>
    <span class="error"><% if (messages.error) { %>
    <%= messages.error %>
    <% } %></span>
    <form action="/login" method="POST" class='formDef'>
      <div>
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit" >Login</button>
    </form>
    <a href="/register">Register</a>
  </div>
</body>
<script>
    var tmp = [];
    var result = '';
    window.location.search.substr(1).split("&")
        .forEach(function (item) {
          tmp = item.split("=");
          if (tmp[0] === 'registered')
              result = true;
        });
    if(result){
      var span = document.getElementById('registered');
      span.removeAttribute("hidden");
      span.innerHTML = 'Registration succesfull. You can now log in!';
    }
</script>