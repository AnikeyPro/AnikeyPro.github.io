<div id="game" v-if='gameOn'>
    <div class="main">
        <div class='row'>
            <div class='row-33'>{{user}}</div>
            <div class='row-33'> 0 : 0 </div>
            <div class='row-33'>{{opponent}}</div>
        </div>
        <div class='row'>
            <div class='row-33'>YOUR TURN</div>
            <div class='row-33'><div class='row-100'>round 1</div><div class='row-100'> TIME </div></div>
            <div class='row-33'>P2 T</div>
        </div>
        <div class='row'>
            <div class='row-33'></div>
            <div class='row-33'><button type="button" @click ='leaveGame()'>Leave Game</button></div>
            <div class='row-33'></div>
        </div>
    </div>
    <div class='game'>
        <img src="img/rock.png" alt="rock" height="150px" width='150px' class="turn" id='rock'>
        <img src="img/scissors.png" alt="scissors" height="150px" width='150px' class="turn" id='scissors'>
        <img src="img/paper.png" alt="paper" height="150px" width='150px' class="turn" id='paper'>
        <img src="img/lizard.png" alt="lizard" height="150px" width='150px' class="turn" id='lizard'>
        <img src="img/spok.png" alt="spok" height="150px" width='150px' class="turn" id='spok'>
    </div>
    <div class='chat'>
        <div class="chat-form-cont">
        <form id="chat-form">
            <input id="chat" autocomplete="off" title="chat" v-model = 'msg'/>
            <button id="SEND" @click='sendToChat($event)'>SEND</button>
        </form>
        </div>
        <ul class="chat-messages">
            <li v-for="message in messages">{{message}}</li>
        </ul>

    </div>
</div>
